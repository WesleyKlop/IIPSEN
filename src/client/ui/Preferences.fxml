<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.ui.Controller">

    <Label text="Fill in your name"/>
    <TextField fx:id="nameField"/>
    <HBox>

        <fx:define>
            <ToggleGroup fx:id="ColorCircles" />
        </fx:define>
        <Circle radius="10" fill="#FFFF00" fx:id="yellowButton" onMouseClicked="#setColorYellow"/>
        <Circle radius="10" fill="#FF9000" fx:id="orangeButton" onMouseClicked="#setColorOrange"/>
        <Circle radius="10" fill="#FF0000" fx:id="redButton" onMouseClicked="#setColorRed"/>
        <Circle radius="10" fill="#AA0039" fx:id="redPurpleButton" onMouseClicked="#setColorRedPurple"/>
        <Circle radius="10" fill="#550461" fx:id="purpleButton" onMouseClicked="#setColorPurple"/>
        <Circle radius="10" fill="#0000FF" fx:id="blueButton" onMouseClicked="#setColorBlue"/>
        <Circle radius="10" fill="#00FF00" fx:id="greenButton" onMouseClicked="#setColorGreen"/>
        <Circle radius="10" fill="#FFFFFF" fx:id="whiteButton" onMouseClicked="#setColorWhite"/>
        <Circle radius="10" fill="#000000" fx:id="blackButton" onMouseClicked="#setColorBlack"/>
        <Circle radius="10" fill="#7D7D7D" fx:id="grayButton" onMouseClicked="#setColorGray"/>
        <Circle radius="10" fill="#FF00A5" fx:id="pinkButton" onMouseClicked="#setColorPink"/>
        <Circle radius="10" fill="#B4FF00" fx:id="lgreenButton" onMouseClicked="#setColorLGreen"/>
        <Circle radius="20" fx:id="displayCircle"/>
    </HBox>


    <Button text="Submit" fx:id="submitPreferencesButton" onAction="#submitName"/>

</VBox>