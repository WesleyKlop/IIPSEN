<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
           fx:controller="client.ui.views.ColorPreferenceView" onMouseEntered="#onMouseEnter"
           onMouseExited="#onMouseExit" stylesheets="/css/colorPreference.css" styleClass="color-preference">
    <Label fx:id="colorPreferenceLabel" text="Pick a Color!" styleClass="color-preference__label"/>
    <ColorPicker fx:id="colorPreferencePicker" styleClass="color-preference__picker" onHiding="#onColorPickerHide"/>
</StackPane>
