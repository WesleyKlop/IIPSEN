<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<fx:root xmlns:fx="http://javafx.com/fxml" type="VBox"
         xmlns="http://javafx.com/javafx"
         style="-fx-font-family: monospace; -fx-font-weight: bolder; -fx-padding: 10">
    <Label fx:id="amount" minWidth="30" textFill="black"/>
    <ImageView fx:id="image" rotate="90" fitWidth="180" preserveRatio="true"/>
</fx:root>
