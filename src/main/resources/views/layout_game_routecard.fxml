<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           xmlns="http://javafx.com/javafx"
           fx:controller="client.ui.controllers.RouteCardController" fx:id="rootPane" prefWidth="1920" prefHeight="1080"
           alignment="BASELINE_CENTER">
    <VBox spacing="10" alignment="CENTER" maxWidth="1000" maxHeight="400" translateY="300"
          style="-fx-background-color: rgba(0,0,0,0.8); -fx-padding: 10 10 10 10; -fx-background-radius: 10">
        <Text fx:id="textRouteCards" style="-fx-font-size: 20; -fx-font-weight: bold" fill="white" stroke="black">
            Choose atleast two routecards!
        </Text>
        <HBox fx:id="routeCardBox" spacing="10" alignment="CENTER">
            <ImageView onMouseClicked="#onRouteCardClicked" fx:id="0"/>
            <ImageView onMouseClicked="#onRouteCardClicked" fx:id="1"/>
            <ImageView onMouseClicked="#onRouteCardClicked" fx:id="2"/>
            <ImageView onMouseClicked="#onRouteCardClicked" fx:id="3"/>
            <ImageView onMouseClicked="#onRouteCardClicked" fx:id="4"/>
        </HBox>
        <Button onMousePressed="#onConfirmClicked">Confirm</Button>
    </VBox>
</StackPane>
