<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
      fx:controller="client.ui.MainMenuControllers.MainMenuOptionController" prefHeight="400.0" prefWidth="600.0"
      spacing="20">
    <ImageView fitWidth="550" preserveRatio="true">
        <Image url="/images/options.png"/>
    </ImageView>
    <Label text="Music Volume:" scaleX="2.0" scaleY="2.0"/>
    <Slider fx:id="optionVolumeMusicSlider" max="1.0" value="0.5" showTickMarks="true" majorTickUnit="0.1"
            blockIncrement="0.1"/>
    <Label text="Sound FX Volume:" scaleX="2.0" scaleY="2.0"/>
    <Slider fx:id="optionVolumeFXSlider" max="1.0" value="0.3" showTickMarks="true" majorTickUnit="0.15"
            blockIncrement="0.15"/>
    <CheckBox fx:id="optionMute" text="Mute" scaleX="2.0" scaleY="2.0" minWidth="100"/>
    <CheckBox fx:id="optionColorblind" text="Colorblind" scaleX="2.0" scaleY="2.0" minWidth="100"/>
</VBox>
