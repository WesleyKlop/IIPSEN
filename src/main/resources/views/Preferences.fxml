<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.ui.PreferencesController">
    <Label text="Fill in your name" />
    <TextField fx:id="nameField" />
    <HBox spacing="5" fx:id="kleur">
        <padding><Insets left="1" right="1" top="3" /></padding>
        <Circle fx:id="yellowButton"    fill="#FFFF00" onMouseClicked="#setColorYellow"    onMouseEntered="#yellowEnterHover"    onMouseExited="#yellowLeaveHover"    radius="5" stroke="#000" />
        <Circle fx:id="orangeButton"    fill="#FF9000" onMouseClicked="#setColorOrange"    onMouseEntered="#orangeEnterHover"    onMouseExited="#orangeLeaveHover"    radius="5" stroke="#000" />
        <Circle fx:id="redButton"       fill="#FF0000" onMouseClicked="#setColorRed"       onMouseEntered="#redEnterHover"       onMouseExited="#redLeaveHover"       radius="5" stroke="#000" />
        <Circle fx:id="redPurpleButton" fill="#AA0039" onMouseClicked="#setColorRedPurple" onMouseEntered="#redPurpleEnterHover" onMouseExited="#redPurpleLeaveHover" radius="5" stroke="#000" />
        <Circle fx:id="purpleButton"    fill="#550461" onMouseClicked="#setColorPurple"    onMouseEntered="#purpleEnterHover"    onMouseExited="#purpleLeaveHover"    radius="5" stroke="#000" />
        <Circle fx:id="blueButton"      fill="#0000FF" onMouseClicked="#setColorBlue"      onMouseEntered="#blueEnterHover"      onMouseExited="#blueLeaveHover"      radius="5" stroke="#000" />
        <Circle fx:id="greenButton"     fill="#00FF00" onMouseClicked="#setColorGreen"     onMouseEntered="#greenEnterHover"     onMouseExited="#greenLeaveHover"     radius="5" stroke="#000" />
        <Circle fx:id="whiteButton"     fill="#FFFFFF" onMouseClicked="#setColorWhite"     onMouseEntered="#whiteEnterHover"     onMouseExited="#whiteLeaveHover"     radius="5" stroke="#000" />
        <Circle fx:id="blackButton"     fill="#000000" onMouseClicked="#setColorBlack"     onMouseEntered="#blackEnterHover"     onMouseExited="#blackLeaveHover"     radius="5" stroke="#000" />
        <Circle fx:id="grayButton"      fill="#7D7D7D" onMouseClicked="#setColorGray"      onMouseEntered="#grayEnterHover"      onMouseExited="#grayLeaveHover"      radius="5" stroke="#000" />
        <Circle fx:id="pinkButton"      fill="#FF00A5" onMouseClicked="#setColorPink"      onMouseEntered="#pinkEnterHover"      onMouseExited="#pinkLeaveHover"      radius="5" stroke="#000" />
        <Circle fx:id="lgreenButton"    fill="#B4FF00" onMouseClicked="#setColorLGreen"    onMouseEntered="#lgreenEnterHover"    onMouseExited="#lgreenLeaveHover"    radius="5" stroke="#000" />
        <Circle fx:id="displayCircle"   fill="#FFFFFF" radius="10" stroke="#000" />
    </HBox>


    <Button fx:id="submitPreferencesButton" onAction="#submitName" text="Submit" />

</VBox>
